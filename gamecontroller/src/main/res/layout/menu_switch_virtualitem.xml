<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/switchbar_switcher"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_switchbar"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_settings_applications_black_18dp"/>

    <HorizontalScrollView
        android:id="@+id/switchbar_container"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/background_switchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbox_QwertKeyboard"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_qwertkeyboard"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_CrossKey"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_crosskey"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_MouseKey"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_mousekey"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_VirtualKeyboard"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_virtualkeyboard"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_Joystick"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_joystick"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_Otg"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_otg"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_Edittext"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_edittext"
                android:checked="false" />
            <CheckBox
                android:id="@+id/checkbox_Lock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/checkbox_lock"
                android:checked="false"/>
            <CheckBox
                android:id="@+id/checkbox_ModeSwitch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/ic_navigation_black_24dp"
                android:checked="false"/>
            <CheckBox
                android:id="@+id/checkbox_Help"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/ic_help_outline_blue_500_24dp"
                android:checked="false"/>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>